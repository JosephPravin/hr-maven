pipeline {
	agent any 
	
	stages{
		stage('Compile stage') {
			steps {
				withMaven(maven: 'maven_3_6_0') {
					sh 'mvn -f cisco-hr/pom.xml clean package'
				}
			}
		}
		
		stage('Test stage') {
			steps {
				echo "Running test scripts"
			}
		}
		
		stage('Deploy to tomcat') {
			steps {
				sshagent(['tomcat-host-admin']) {
    					sh 'scp -o StrictHostKeyChecking=no target/*.jar admin@127.0.0.1:/Users/jpravinp/Desktop/tomcat/webapps'
				} 
			}
		}
	}
}
